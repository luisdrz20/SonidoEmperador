@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<link href="~/css/login.css" rel="stylesheet" />



<div style="
    background-image: url('@Url.Content("~/imagenes/componentespagina/lineasfondo.png")');
    background-size: cover;
    background-position: center;
    background-attachment: fixed;
">
    <section style="display:flex; align-items:center; justify-content:center;">

        <img src="~/imagenes/componentespagina/logoDarckCentrado.png" style="margin-top:3em; margin-bottom:2em;">



    </section>

    <section style="padding-bottom: 5em;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-5 col-lg-6 col-md-8 col-12">
                    <div class="card shadow-sm mb-6">
                        <div class="card-body">

                            <form id="account" method="post" class="needs-validation mb-6" novalidate="">
                                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                                <div class="form-floating mb-3">
                                    
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="" />
                                    <label asp-for="Input.Email">Email</label>
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>




                                </div>
                                <div class="form-floating mb-3">
                                   
                                  

                                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="" />
                                        <label asp-for="Input.Password">Password</label>
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>


                                </div>

                                <div class="mb-4 d-flex align-items-center justify-content-between">
                                    <div class="checkbox ">
                                        <label asp-for="Input.RememberMe" class="form-label">
                                            <input class="form-check-input" asp-for="Input.RememberMe" />
                                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                                        </label>
                                    </div>

                                    <div> <a class="btn" id="forgot-password" asp-page="./ForgotPassword">¿Olvidaste tu contraseña?</a></div>
                                </div>

                                <div class="d-grid">
                                    <button id="login-submit" class="btn bonIS" type="submit">Iniciar sesión</button>
                                </div>
                            </form>

                            <span>Inicia sesión con tu red social.</span>
                            <div class="d-grid mt-3">
                                <a href="#" class="btn  bonG" style="">
                                    <span class="me-3">
                                        <i class="bi bi-google"></i>
                                    </span>
                                    Contina con Google
                                </a>
                            </div>
                            <div class="d-grid mt-2">
                                <a href="#" class="btn bonF">
                                    <span class="me-3">
                                        <i class="bi bi-facebook"></i>
                                    </span>
                                    Contina con Facebook
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-top:.5em;">
                <div class="col-lg-12">
                    <div class="text-center">
                        <div class="small mb-3 mb-lg-0 text-body-tertiary">

                            <span class="text-primary"><a style="color:darkgreen;" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Nuevo usuario</a></span>
                            |
                            <span class="text-primary "><a style="color:darkgreen;" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Reenviar correo de confirmación</a></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>



</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
